@model Call_Logger.Models.Call
@using Call_Logger.Models


@{
    var selectListItems = new[]
    {

        new SelectListItem() { Value = "Open", Text = "Open", Selected = true },
        new SelectListItem() { Value = "Hold", Text = "Hold", Selected = false },
        new SelectListItem() { Value = "Closed", Text = "Closed", Selected = false }
    };

    var selectListReps = new[]
    {
        new SelectListItem() { Value = "Luz Acosta", Text = "Luz Acosta", Selected = true },
        new SelectListItem() { Value = "Chris Ashby", Text = "Chris Ashby", Selected = false },
        new SelectListItem() { Value = "Maren Boehm", Text = "Maren Boehm", Selected = false },
        new SelectListItem() { Value = "Carlos Herrera", Text = "Carlos Herrera", Selected = false },
        new SelectListItem() { Value = "Trina Hinkle", Text = "Trena Hinkle", Selected = false },
        new SelectListItem() { Value = "Veronica Lindsey", Text = "Veronica Lindsey", Selected = false },
        new SelectListItem() { Value = "Alice Roques", Text = "Alice Roques", Selected = false },
        new SelectListItem() { Value = "Greg Sherman", Text = "Greg Sherman", Selected = false },
        new SelectListItem() { Value = "Yasilda Stoner", Text = "Yasilda Stoner", Selected = false }
    };
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.ID, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_TS, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Call_TS, new { @class = "form-control datepicker" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Rep, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.Call_Rep, selectListReps, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Status, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.Call_Status, selectListItems, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Registrant_ID, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Registrant_ID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Summary, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Call_Summary, new { @class = "form-control" })
            </div>

            @* Add Category check boxes here.
                    <div class="form-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.Category) @Html.DisplayNameFor(m => m.Category)
                        </label>
                    </div>
                </div>*@

            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(m => m.Call_Notes, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Call_Notes, 14, 20, new { @class = "form-control" })
                </div>

            </div>

            <div class="col-md-12">
                <div class="pad-top">
                    <button type="submit" class="btn btn-success btn-lg margin-right">
                        <span class="glyphicon glyphicon-save"></span> Save
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-lg">
                        <span class="glyphicon glyphicon-remove"></span> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
}