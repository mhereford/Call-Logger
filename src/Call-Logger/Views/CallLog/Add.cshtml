@model Call_Logger.Models.Call

@{
    ViewBag.Title = "Add Call";
    ViewBag.ShowBackBar = true;
}

<h2>@ViewBag.Title</h2>



@using (Html.BeginForm())
{
    @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-danger" })

    <div class="row">

        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.ID, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.ID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_TS, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Call_TS, new { @class = "form-control datepicker" })
             </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Rep, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Call_Rep, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Status, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.Call_Status, (SelectList)ViewBag.StatiSelectListItems, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Registrant_ID, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Registrant_ID, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Call_Summary, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Call_Summary, new { @class = "form-control" })
            </div>

            @* Add Category check boxes here.
                <div class="form-group">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.Category) @Html.DisplayNameFor(m => m.Category)
                    </label>
                </div>
            </div>*@
            
            <div class="col-md-6">

                <div class="form-group">
                    @Html.LabelFor(m => m.Call_Notes, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Call_Notes, 14, 20, new { @class = "form-control" })
                </div>

            </div>

            <div class="col-md-12">
                <div class="pad-top">
                    <button type="submit" class="btn btn-success btn-lg margin-right">
                        <span class="glyphicon glyphicon-save"></span> Save
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-lg">
                        <span class="glyphicon glyphicon-remove"></span> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
}