@model Call_Logger.Models.Call

@{ 
    ViewBag.Title = "Delete Call";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-danger">
    Are you sure you want to delete the following entry?
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Call_TS)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Call_TS.ToShortDateString()
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Call_Status)
            </div>
            <div class="col-xs-8 col-sm-9">
               @Model.Call_Status
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
                @Html.LabelFor(m => m.Registrant_ID)
            </div>
            <div class="col-xs-8 col-sm-9">
                @Model.Registrant_ID
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-3">
               @Html.LabelFor(m => m.Call_Summary)
            </div>
            <div class="col-xs-8 col-sm-9">
              @Model.Call_Summary
            </div>
        </div>
        @using (Html.BeginForm())
        {
            <div class="pad-top">
                <button type="submit" class="btn btn-primary btn-lg margin-right">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
                <a href="@Url.Action("Index")" class="btn btn-info btn-lg">
                    <span class="glyphicon glyphicon-remove"></span> Cancel
                </a>
            </div>
        }
            
    </div>

</div>
